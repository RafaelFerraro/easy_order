<% unless params.valid? %>
  <ul>There was an error on your submission</ul>

  <% params.errors.each do |error| %>
    <li><%= error.attribute_name %> is required</li>
  <% end %>
<% end %>

<%=
  form_for :sub_category, routes.sub_categories_path do
    label :name
    text_field :name

    label :description
    text_field :description

    label :category
    select(:category_id, selections)
      
    submit "Create SubCategory"
  end
%>