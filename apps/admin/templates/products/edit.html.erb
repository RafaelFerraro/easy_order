<% unless params.valid? %>
  <ul>There was an error on your submission</ul>
  <% params.errors.each do |error| %>
    <li><%= error.attribute_name %> is required</li>
  <% end %>
<% end %>

<section>
  <%= 
    form_for :product, routes.product_path(product.id), method: :patch, values: { product: product } do 
      div class: 'field' do
        label :title
        text_field :title
      end

      div class: 'field' do
        label :description
        text_field :description
      end

      div class: 'field' do
        label :description
        text_field :description
      end

      div class: 'field' do
        label :color
        text_field :color
      end

      div class: 'field' do
        label :size
        text_field :size
      end

      div class: 'field' do
        label :quantity
        select :quantity, select_builder((0..100), { product.quantity.to_s => product.quantity.to_s })
      end

      div class: 'field' do
        label :purchase_price
        text_field :purchase_price
      end

      div class: 'field' do
        label :sale_price
        text_field :sale_price
      end

      div class: 'field' do
        label :sub_category_id
        select :sub_category_id, select_builder
      end

      div class: 'controls' do
        submit "Update Product"
      end
    end
  %>
</section>

<p>
  <%= delete_form(product.id) %>  
</p>

